{
  "extends": "../api/tsconfig.json", 
  "compilerOptions": {
    "typeRoots": [
      "../api/node_modules/@types",
      "../node_modules/@types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "noImplicitAny": false, 
    "strict": false,
    "sourceMap": true,
    "outDir": "../dist/tests", 
    "baseUrl": "..", 
    "paths": {
      "*": [
        "api/node_modules/*", 
        "node_modules/*"      
      ],
      "src/*": [
        "api/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
