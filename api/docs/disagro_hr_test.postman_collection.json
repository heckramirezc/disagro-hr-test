		{
			"name": "ETL",
			"item": [
				{
					"name": "Iniciar proceso ETL",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Este test extrae el ID del trabajo (job_id) de la respuesta exitosa",
									"var jsonData = pm.response.json();",
									"// Guardamos el job_id como una variable de colección/entorno para usarlo en la siguiente petición.",
									"pm.environment.set(\"last_job_id\", jsonData.items[0].id);",
									"pm.test(\"Status code is 201 Created\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"pm.test(\"La respuesta contiene el ID del trabajo\", function () {",
									"    pm.expect(jsonData.items[0].id).to.be.a('number');",
									"});"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
